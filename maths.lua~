
Question = {
   free = 0,
   args = {'_','_','_'},
   op = '_'
}

Add = {
   fun = AddPair,
   sym = '+'
}

Subtract = {
   fun = SubFrom,
   sym = '-'
}

Multiply = {
   fun = MultPair,
   sym = 'x'
}

Divide = {
   fun = DivBySecond,
   sum = '/'
}

Ops = {
   Add
}

function MultPair(x,y)
   return x*y
end

function DivBySecond(x,y)
   return x/y
end

function SubSecond(x,y)
   return x-y
end

function AddPair(x,y)
   return x+y
end

function Question.randomise(self)
   local free = math.random(3)
   question.free = free
   for i, v in ipairs(self.args) do
      if i ~= free then
         self.args[i] = math.random(10)
      end
   end
   
   local choice = math.random(#Ops)
   self.op = Ops[choice]
end

function Question.toString(self)
   local str = self.args[1] .. self.op.sym .. self.args[2] .. '=' .. self.args[3]
   return str
end

function Question.checkAnswer(self,answer)
   local argCopy = self.args
   argCopy[question.free] = answer
   return self.op.fun(argCopy[1],argCopy[2]) == argCopy[3]
end
